<?xml version="1.0" encoding="UTF-8"?>
<table xmlns="http://query.yahooapis.com/v1/schema/table.xsd">
  <meta>
    <author>Bart Teeuwisse</author>
    <documentationURL>http://thecodemill.biz/searchmonkey/twitter.user.profile</documentationURL>
    <sampleQuery>select * from {table} where id='bartt'</sampleQuery>
  </meta>
  <bindings>
    <select itemPath="feed.entry.content.adjunct.item" produces="XML">
      <urls>
        <url>http://searchmonkey.thecodemill.biz/?url=http://twitter.com/{id}</url>
      </urls>
      <inputs>
        <key id="id" type="xs:string" paramType="path" required="true"/>
      </inputs>
    </select>
  </bindings>
</table>

